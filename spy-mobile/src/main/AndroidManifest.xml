<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spyapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.spy.dagger.SpyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyB0SJHCMhzT5X_p81WGpOXYVrQg9i4_wFI" />

        <activity android:name="com.spy.activities.EventsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.spy.activities.RegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.spy.activities.EditProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.spy.activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.spy.activities.MapActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>